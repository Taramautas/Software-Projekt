@{
    ViewData["Title"] = "Create User";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<form asp-controller="" asp-action="" method="post">
    <div class="form-group row">
        <label for="First Name" class="col-2 col-form-label">First Name:</label>
        <input class="col-10 form-control"><br />
    </div>
    <div class="form-group row">
        <label for="Name" class="col-2 col-form-label">Name:</label>
        <input class="col-10 form-control"><br />
    </div>
    <div class="form-group row">
        <label for="E-Mail" class="col-2 col-form-label">E-Mail:</label>
        <input class="col-10 form-control"><br />
    </div>
    <div class="form-group row">
        <label for="Password" class="col-2 col-form-label">Password:</label>
        <input class="col-10 form-control"><br />
    </div>
    <div class="form-group row">
        <label for="Role" class="col-2 col-form-label">Role:</label>
        <select id="Role" class="col-10 form-control">
            <option value="Employee">Employee</option>
            <option value="Guest">Guest</option>
            <option value="VIP">VIP</option>
        </select><br />
    </div>
    <div class="row">
        <button class="btn btn-outline-primary col-12" type="submit">Create</button>
    </div>
</form>
