@{
    ViewData["Title"] = "Simulation";
    Layout = "_PlanerLayout";
}

<h1 class="page-title">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-10">
        <h2><i>Please add the vehicles for the simulation</i></h2><br />
    </div>
    <div class="col-sm-2">
        <abbr title="Import">
            <a class="btn btn-outline-primary ml-1 submit"  onclick="    "><span class="material-icons">publish</span></a>
        </abbr>
    </div>
</div>
<form>
    <!-- Vehicles -->
    <div><h3><u>Vehicles</u></h3></div><br />
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Model</label>
        <div class="col-sm-10">
            <input type=" " class="form-control" id=" " placeholder="Please enter a valid model">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Battery Capacity</label>
        <div class="col-sm-10">
            <input type=" " class="form-control" id=" " placeholder="Please enter the battery capacity in kW">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Current State of Charge</label>
        <div class="col-sm-10">
            <input type=" " class="form-control" id=" " placeholder="Please enter the current stage of charge">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Target State of Charge</label>
        <div class="col-sm-10">
            <input type=" " class="form-control" id=" " placeholder="Please enter the target state of charge">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Count</label>
        <div class="col-sm-10">
            <input type=" " class="form-control" id=" " placeholder="Please enter the number of vehicles">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <abbr title="Add Vehicle">
                <button type="submit" class="btn btn-outline-primary submit" style="padding-bottom: 0;">
                    <span class="material-icons">add_box</span>
                </button>
            </abbr>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-12">
            <abbr title="Next">
                <a class="btn btn-outline-primary ml-1 submit"  asp-area="" asp-controller="Home" asp-action="SimulationInfrastructure"><span class="material-icons">arrow_right</span></a>
            </abbr>
        </div>
    </div>
</form>
