@model IEnumerable<Uebungsprojekt.Models.Booking>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <p class="float-left h3">Übersicht aller Buchungen</p>
    <form method="get" enctype="multipart/form-data" asp-controller="Booking" asp-action="Create">
        <button type="submit" class="btn btn-primary float-right">Neue Buchung Anlegen</button>
    </form>

</div>

// Wenn noch kein Eintrag vorhanden ist, soll ein Text angezeigt werden. Anderenfalls die Tabelle
@if (Model.Count() == 0)
{
    <br />
    <br />
    <br />
    <p>
        Noch keine
        Buchungen vorhanden!
    </p>
}
else
{
    <table style="width:100%" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Charge</th>
                <th>Needed Distance</th>
                <th>Start_Time</th>
                <th>End_Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Booking in Model)
            {
                <tr>
                    <td>@Booking.charge</td>
                    <td>@Booking.needed_distance</td>
                    <td>@Booking.start_time</td>
                    <td>@Booking.end_time</td>
                </tr>
            }
        </tbody>
    </table>
}




