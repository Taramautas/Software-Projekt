@model IEnumerable<Uebungsprojekt.Models.Booking>


@{
    ViewData["Title"] = "Home Page";
}
    <div class="container">
        <div class="row">
            <div class="col" align="left">
                <p>Uebersicht aller Buchungen</p>
            </div>
            <div class="col" align="right">
                <a class="btn btn-outline-primary" role="button" asp-controller="Booking" asp-action="Create">Erstelle Buchung</a>
            </div>
        </div>
    </div>
        @if(Model.Count() != 0) { 
            <table style="width:100%" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Charge</th>
                        <th>Needed Distance</th>
                        <th>ConnectorTyüe</th>
                        <th>Start_Time</th>
                        <th>End_Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Booking in Model)
                    {
                    <tr>
                        <td>@Booking.charge</td>
                        <td>@Booking.needed_distance</td>
                        <td>@Booking.connectorType</td>
                        <td>@Booking.start_time</td>
                        <td>@Booking.end_time</td>
                    </tr>
                    }
                </tbody>

            </table>
        } else{ 
            <p>Noch keine Buchungen vorhanden!</p>
        }
        

