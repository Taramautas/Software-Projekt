@model Uebungsprojekt.Models.Booking

@{
    ViewData["Title"] = "Create";
    
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="Booking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="charge" class="control-label" id="charge" name="charge"></label>
                <input asp-for="charge" class="form-control"/>
                <span asp-validation-for="charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="needed_distance" class="control-label"></label>
                <input asp-for="needed_distance" class="form-control" id="needed_distance" name="needed_distance" />
                <span asp-validation-for="needed_distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="start_time" class="control-label"></label>
                <input asp-for="start_time" class="form-control" id="start_time" name="start_time" />
                <span asp-validation-for="start_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="end_time" class="control-label"></label>
                <input asp-for="end_time" class="form-control" id="end_time" name="end_time" />
                <span asp-validation-for="end_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
                
            </div>
        </form>
    </div>
</div>


