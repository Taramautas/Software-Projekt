@model IEnumerable<Uebungsprojekt.Models.Booking>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <form method="get" enctype="multipart/form-data" asp-controller="Booking" asp-action="Create">
        <button type="submit" class="btn btn-primary float-right">Neue Buchung erstellen</button>
    </form>
</div>


@if (Model.Count() == 0)
{
    <h1>
        Noch keine Buchungen vorhanden!
    </h1>
}
else
{
    <table style="width:100%" class="table-borderless table-striped table-light table-hover">
        <thead>
            <tr>
                <th>Ladestand</th>
                <th>Nötige Distanz</th>
                <th>Start</th>
                <th>Ende</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Booking in Model)
            {
                <tr>
                    <td>@Booking.charge</td>
                    <td>@Booking.needed_distance</td>
                    <td>@Booking.start_time</td>
                    <td>@Booking.end_time</td>
                </tr>
            }
        </tbody>
    </table>
}



