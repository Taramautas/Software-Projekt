@model IEnumerable<Uebungsprojekt.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}
    
<h1 class="page-title">@ViewData["Title"]</h1>

<div class="row" id="bookingTableHeadline">
    <p>Overview: </p>
    <form id="importform" name="importform" method="post" enctype="multipart/form-data" asp-controller="Booking" asp-action="Import">
        <label class="btn btn-secondary">
            <input id="file" type="file" name="files" onchange="import_json()"/>
        </label>
    </form>
    <a class="btn btn-primary" asp-area="" asp-controller="Booking" asp-action="Export">Export</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Booking" asp-action="Create">Create</a>
</div>

<!-- Only show booking table if there are any bookings to display-->
@if (Model.Any())
{
<table style="width:100%" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Charge</th>
            <th>Needed Distance</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Connector Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Charge</td>
                <td>@booking.Needed_distance</td>
                <td>@booking.Start_time</td>
                <td>@booking.End_time</td>
                <td>@booking.Connector_Type</td>
            </tr>
        }
    </tbody>
</table>
<!-- Show alternative text if not -->
} else
{
    <p>There are no bookings to display!</p>
}

<script>
    function import_json() {
        let importForm = $('#importForm');
        let json_file = document.getElementById('file');
        if (!json_file.files[0].name.endsWith('.json')) {
            print_err("Please select a .json file");
        } else if (json_file.files[0].size > 1048576) {
            print_err("Please select a file smaller than 1MB");
        } else {
            importForm.submit();
        }
    }

    function print_err(Error_Message)
    {
        let importFormSpawn = $('#error_panel');
        importFormSpawn.text(Error_Message);
    }
</script>