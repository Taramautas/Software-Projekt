@model IEnumerable<Uebungsprojekt.Models.Booking>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container" style="margin-top:5%">
    <div class="row">
        <div class="col-6">
            <h2>Übersicht aller Buchungen:</h2>
        </div>
        <div class="col-6 create">
            <button type="button" class="btn btn-outline-primary">
                <a asp-action="Create" style="text-decoration:none; color:black">Neue Buchung anlegen</a>
            </button>
        </div>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table style="width:100%" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Charge</th>
                <th>Needed Distance</th>
                <th>Start_Time</th>
                <th>End_Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Booking in Model)
            {
                <tr>
                    <td>@Booking.charge</td>
                    <td>@Booking.needed_distance</td>
                    <td>@Booking.start_time</td>
                    <td>@Booking.end_time</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{   
    <br />
    <h3><i>Noch keine Buchungen vorhanden!</i></h3>
}

