@{
    ViewData["Title"] = "Simulation Tracking";
}

<h1 class="page-title">@ViewData["Title"]</h1>
<div class="container">
    <div class="col-sm-12">
        <h2><i>Simulation Data</i></h2><br />
    </div>
    <div class="row">
        <div class="col-sm-3">
            Tick:
        </div>
        <div class="col-sm-9">
            213/1000
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Elapsed Time:
        </div>
        <div class="col-sm-9">
            00:10:05
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Current time in Simulation:
        </div>
        <div class="col-sm-9">
            10.06.2020 11:30
        </div>
    </div>
</div>
<br />
<table id="booking-table" style="width:100%" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Location</th>
            <th>Total amount of charging stations</th>
            <th>Current Workload</th>
        </tr>
    </thead>
    <tbody>
        <tr> <!-- for with data -->
            <td>Ludwigsburg Film- und Medien-Zentrum (Headquarter)</td>
            <td>2</td>
            <td>50%</td>
        </tr>
    </tbody>
</table>

<br />
<div class="form-group row">
    <div class="col-sm-12">
        <a class="btn btn-primary ml-1 submit" asp-area="" asp-controller="Home" asp-action="SimulationEvaluation">See the Evaluation of this Simulation</a>
    </div>
</div>
