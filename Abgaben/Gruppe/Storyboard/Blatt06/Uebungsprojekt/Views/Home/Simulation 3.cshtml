@{
    ViewData["Title"] = "Simulation";
}

<h1 class="page-title">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-sm-10">
        <h2><i>Please fill the fields with the values you want to have for the simulation:</i></h2><br />
    </div>
    <div class="col-sm-2">
        <div class="btn btn-secondary" onclick="    ">Import</div>
    </div>
</div>
<form>
    <!-- Vehicles -->
    <div><h3><u>Vehicles</u></h3></div><br />
    <div><h4>1. Vehicle</h4></div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Model</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter a valid model">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Battery Capacity</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the battery capacity in kW">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Current State of Charge</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the current stage of charge">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Target State of Charge</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the state of charge you would like to have">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Count</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the number of vehicles">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <abbr title="Add vehicle">
                <button type="submit" class="btn btn-outline-success submit" style="padding-bottom: 0;" >
                    <span class="material-icons">add_circle</span>
                </button>
            </abbr>
        </div>
    </div>
    <!-- Vehicles -->
    <br />
    <!-- Booking Distribution -->
    <div><h3><u>Booking Distribution</u></h3></div><br />
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Peak Time</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter a valid time">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Min</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the minimum number of Bookings">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Max</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the maximum number of Bookings">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Spread</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the amount of peanut butter you want on your toast <3">
        </div>
    </div>
    <!-- Booking Distribution -->
    <br />
    <!-- Configure Loaction Infrastructure -->
    <div><h3><u>Configure Loaction Infrastructure</u></h3></div><br />
    <div><h4>1. Charging Station</h4></div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter a valid city name">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Type of Charging Station</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the type of Charging Station">
        </div>
    </div>
    <div class="form-group row">
        <label for=" " class="col-sm-2 col-form-label">Count</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter the number of Charging Stations">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <abbr title="Add Charging Station">
                <button type="submit" class="btn btn-outline-success submit" style="padding-bottom: 0;">
                    <span class="material-icons">add_circle</span>
                </button>
            </abbr>
        </div>
    </div>
    <!-- Booking Distribution -->
    <br />
    <!-- Tickrate -->
    <div><h3><u>Tick Rate</u></h3></div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter how many minutes a Tick should equal">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="email" class="form-control" id=" " placeholder="Please enter how many Ticks the simulation should run">
        </div>
    </div>
    <!-- Tickrate -->
    <br />
    <div class="form-group row">
        <div class="col-sm-12">
            <a class="btn btn-primary ml-1 submit" asp-area="" asp-controller="Home" asp-action="SimulationTracking">Run Simulation</a>
        </div>
    </div>
</form>