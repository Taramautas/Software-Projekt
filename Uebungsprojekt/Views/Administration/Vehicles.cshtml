@model IEnumerable<Uebungsprojekt.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles";
    Layout = "_PlanerLayout";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="row TableHeadline">
    <p>Overview: </p>
    <div>
        <div class="row">
            <a class="btn btn-primary ml-1" asp-area="" asp-controller="Administration" asp-action="CreateVehicle">Create new Vehicle</a>
        </div>
        <div class="row">
            <span id="import_form_span" class="text-danger form-danger-span d-none">Please select a .json file with max. 1MB for importing booking entries.</span>
        </div>
    </div>
</div>

<table id="booking-table" style="width:100%" class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>ID</th>
            <th>Model</th>
            <th>Capacity</th>
            <th>Connector Types</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var vehicle in Model)
            {
                <tr>
                    <td>@vehicle.id</td>
                    <td>@vehicle.model_name</td>
                    <td>@vehicle.capacity</td>
                    <td>@vehicle.connector_types</td>
                </tr>
            }

    </tbody>
</table>