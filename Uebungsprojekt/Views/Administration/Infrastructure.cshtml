@model Uebungsprojekt.ViewModel.Administration.InfrastructureViewModel

@{
    ViewData["Title"] = "Infrastructure";
    Layout = "_PlanerLayout";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-sm-12">
        <div class="row submit">
            <form id="import_form" asp-controller="Administration" asp-action="Import" enctype="multipart/form-data" method="post">
                <input id="json_files" class="btn btn-primary d-none" size="1" name="json_files" type="file" accept=".json" onchange="importJson()" />
                <abbr title="Import">
                    <div class="btn btn-outline-primary ml-1 submit" onclick="toggleImport()"><span class="material-icons">publish</span></div>
                </abbr>
            </form>
            <abbr title="Export">
                <a class="btn btn-outline-primary ml-1 submit" asp-area="" asp-controller="Administration" asp-action="Export"><span class="material-icons">get_app</span></a>
            </abbr>
        </div>
        <div class="row">
            <span id="import_form_span" class="text-danger form-danger-span d-none">Please select a .json file with max. 1MB for importing booking entries.</span>
        </div>
    </div>
</div>



<table id="booking-table"style="width:100%" class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Locations</th>
            <th></th>
            <th></th>
            <th>
                <a asp-controller="Administration" asp-action="CreateLocation" class="submit">Add Location</a>
            </th>
            <th>
                @if (Model.locations.Any())
                {
                    <a asp-controller="Administration" asp-action="CreateChargingZone" class="submit">Add Charging Zone</a>
                }
            </th>
            <th>
                @if (Model.charging_zones.Any())
                {
                    <a asp-controller="Administration" asp-action="AddChargingColumn" class="submit">Add Charging Column</a>
                }
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Location location in Model.locations)
        {
            <tr>
                @*<td>Location A</td>*@
                @if (!Model.charging_zones.Any(i => i.location == location))
                {
                    <td>@location.city @Html.ActionLink("Delete", "DeleteLocation", new { id = location.id })</td>
                }
                else
                {
                    <td>@location.city</td>
                }
                <td>
                    <table id="booking-table" style="width:100%" class="table table-striped table-hover">
                        <tr>
                            <th>Charging Zones</th>
                            <th></th>
                        </tr>
                        @foreach (ChargingZone chargingZone in Model.charging_zones)
                        {
                            @if (chargingZone.location.id == location.id)
                            {
                                <tr>
                                    @if (!Model.charging_columns.Any(i => i.charging_zone == chargingZone))
                                    {
                                        <td>@chargingZone.name @Html.ActionLink("Delete", "DeleteChargingZone", new { id = chargingZone.id })</td>
                                    }
                                    else
                                    {
                                        <td>@chargingZone.name</td>
                                    }
                                    <td>
                                        <table id="booking-table" style="width:100%" class="table table-striped table-hover">
                                            <tr>
                                                <th>Charging Columns</th>
                                                <th></th>
                                            </tr>
                                            @foreach (ChargingColumn chargingColumn in Model.charging_columns)
                                            {
                                                @if (chargingColumn.charging_zone.id == chargingZone.id)
                                                {
                                                    <tr>
                                                        <td>@chargingColumn.id - @chargingColumn.charging_column_type_id.model_name</td>
                                                        <td>@Html.ActionLink("Delete", "DeleteChargingColumn", new { id = chargingColumn.id })</td>
                                                    </tr>
                                                }
                                            }
                                            @if (!Model.charging_columns.Any(i => i.charging_zone == chargingZone))
                                            {
                                                <tr>
                                                    <td>No Charging Columns to display</td>
                                                </tr>
                                            }
                                        </table>
                                    </td>

                                </tr>

                            }
                        }
                        @if (!Model.charging_zones.Any(i => i.location == location))
                        {
                            <tr>
                                <td>No Charging Zones to display</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        }
        @if (!Model.locations.Any())
        {
            <tr>
                <td>No Locations to display</td>
            </tr>
        }
    </tbody>
</table>
