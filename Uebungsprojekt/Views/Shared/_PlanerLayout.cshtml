<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MHP</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site1.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&family=Orbitron&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container container-nav">
                <div class="row">
                    <div class="text-logo">MHP: DRIVEN BY EXCELLENCE</div>

                    <div class="w-100"></div>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark home" asp-area="" asp-controller="Administration" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark privacy" asp-area="" asp-controller="Administration" asp-action="SimulationConfig">Simulation</a> <!-- work in progress -->
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark viewselection" asp-controller="Administration" asp-action="Infrastructure">Infrastructure</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark viewselection" asp-controller="Administration" asp-action="Vehicles">Vehicles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark viewselection" asp-controller="UserDashboard" asp-action="Index">
                                    User |
                                    <i>Planer</i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/MHP_Logo_RGB.png" class="rounded float-right img-fluid" alt="MHP – A Porsche Company" /></a> <!-- logo -->
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Uebungsprojekt - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
        -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
